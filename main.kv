FloatLayout:
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#400450")
        Rectangle:
            size: self.size
            pos: self.pos
    Image:
        pos_hint: {"right":1 ,"top":0.9 }
        size_hint:1,0.2
        source:"icones/okj.png"
        id: foto_perfil
    ScreenManager:
        pos_hint:{"right":1 ,"top":0.7}
        size_hint:1,0.7
        id: screen_manager

        AdicionarVisita:
            name:"adicionarvisita"
            id:adicionarvisita

        LoginPage:
            name:"loginpage"
            id:loginpage

        HomePage:
            name:"homepage"
            id:homepage

        AjustesPage:
            name:"ajustespage"
            id:ajustespage

        EditarVisita:
            name:"editarvisita"
            id:editarvisita

        ListarVisita:
            name:"listarvisita"
            id:listarvisita

        FotoPerfil:
            name:"fotoperfil"
            id:fotoperfil
