#:import utils kivy.utils
<AjustesPage>
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/img.png"
        Label:
            canvas.before:
                Rectangle:
                    pos:self.pos
                    size:self.size
                    source:"icones/botao_fino.png"
            pos_hint: {"right": 0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            bold:True
            text: "Seu ID Unico: 123"
            id: id_vendedor
#mudar foto de perfil
        ImageButton:
            pos_hint: {"right":0.5, "top":0.7}
            size_hint:0.5, 0.15
            source:"icones/foto_perfil.png"
            on_release:app.mudar_tela("fotoperfil")
        LabelButton:
            pos_hint: {"right":0.9, "top":0.7}
            size_hint:0.5, 0.15
            text:"Mudar Foto de Perfil"
            on_release:app.mudar_tela("fotoperfil")

#Trocar senha
        ImageButton:
            pos_hint: {"right":0.5, "top":0.55}
            size_hint:0.5, 0.15
            source:"icones/edit.png"
            on_release:app.mudar_tela("listarvisita")
        LabelButton:
            pos_hint: {"right":0.9, "top":0.55}
            size_hint:0.5, 0.15
            text:"Trocar Senha"
            on_release:app.mudar_tela("listarvisita")

#ver todas as vendas
        ImageButton:
            pos_hint: {"right":0.5, "top":0.4}
            size_hint:0.5, 0.15
            source:"icones/vendas_empresa.png"
            on_release:app.mudar_tela("listarvisita")
        LabelButton:
            pos_hint: {"right":0.9, "top":0.4}
            size_hint:0.5, 0.15
            text:"Ver todos Agendamentos"
            on_release:app.mudar_tela("listarvisita")

#botao voltar
        FloatLayout:
            pos_hint: {"right": 1,"top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb:utils.get_color_from_hex("#400450")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint:{"right":0.2, "top":0.9}
                size_hint:0.2,0.8
                source:"icones/voltar.png"
                on_release: app.mudar_tela("homepage")